<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    style="?attr/materialCardViewFilledStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Хакатон MOSPROM"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="22sp"
                android:textColor="@color/md_theme_dark_onSurface"/>

            <TextView
                android:id="@+id/event_online"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="online"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp" />

        </LinearLayout>



        <TextView
            android:id="@+id/event_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Москва📍"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23 - 24 мая 2023 год"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="10dp">


        </androidx.recyclerview.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_go_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Участвую!"
                android:textSize="14sp"
                android:layout_marginBottom = "15dp"/>

            <Button
                android:id="@+id/button_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Подробнее"
                android:textSize="14sp"
                android:layout_marginBottom = "15dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>


    </LinearLayout>



</com.google.android.material.card.MaterialCardView>